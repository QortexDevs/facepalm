<input type="text" class="text datepicker datetime" data-year-range="{{ fieldParams.yearRange }}" readonly
       name="{{ form.meta.fieldNameBase }}[{{ field }}]"
       value="{{ form.object.__get(field)=='0000-01-01 00:00:00'?'':form.object.__get(field)|date('d.m.Y H:i') }}"/>
<i class="fa fa-times clear-date" title="Сбросить дату"></i>

